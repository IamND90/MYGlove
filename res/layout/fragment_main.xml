<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pa.myglove.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/textviewStyleStatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Module" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imageButton_bt_state"
                style="@style/btnStyleGreen"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:src="@android:drawable/stat_sys_data_bluetooth" />

            <ImageButton
                android:id="@+id/imageButton_wifi_state"
                style="@style/btnStyleGreen"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:contentDescription="enable Wifi"
                android:src="@drawable/ic_action_wifi" />

            <ImageButton
		        android:id="@+id/imageButton_main_maininfo"
		        style="@style/btnStyleArsenic"
		        android:layout_width="85dp"
                android:layout_height="35dp"
		        android:src="@android:drawable/ic_menu_info_details" />
            
            <ImageButton
                android:id="@+id/imageButton_main_setup"
                style="@style/btnStyleArsenic"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:src="@android:drawable/ic_menu_manage" />

            
		
		    <ImageButton
		        android:id="@+id/imageButton_main_Gestures"
		        style="@style/btnStyleArsenic"
		        android:layout_width="match_parent"
                android:layout_height="35dp"
		        android:src="@android:drawable/ic_dialog_dialer" />

		    

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeholder_fragment_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeholder_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/placeholder_fragment_bot"
        android:orientation="vertical" >
    </LinearLayout>

 

</RelativeLayout>