<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1"
        android:padding="5dp"
        android:gravity="center"
        android:text="Settings"
        android:textSize="20sp"
        />

    <LinearLayout
        android:id="@+id/linearLayout_setting"
        android:background="@drawable/background_textview_static"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/textviewStyleStatic2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Device Address:" />
                
                <TextView
                    style="@style/textviewStyleStatic2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="GoPro Name:" />
                
                <TextView
                    style="@style/textviewStyleStatic2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="GoPro Password:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_dev_address"
                        style="@style/textviewStyleEdit1"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="" />

                    <Button
                        android:id="@+id/button_scan_dev"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:textSize="10sp"
                        android:text="SCAN" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_gp_name"
                        style="@style/textviewStyleEdit1"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="" />

                    <Button
                        android:id="@+id/button_gp_scan"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:textSize="10sp"
                        android:text="SCAN" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_gp_pw"
                        style="@style/textviewStyleEdit1"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="" />

                    <Button
                        android:id="@+id/button_gp_pw"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:textSize="10sp"
                        android:text="EDIT" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <Button
                style="@style/btnStyleBlackpearl"
                android:id="@+id/button_saveSettings"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_margin="1dp"
                android:text="Save Settings" />

            <TextView
                android:id="@+id/textView_settings"
                style="@style/textviewStyleEdit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
